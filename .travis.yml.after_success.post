#!/bin/bash
set -x

# go home!
cd ~

# create Dockerfile
cat > ./Dockerfile <<EOL
FROM scratch
MAINTAINER Gorka Lerchundi Osa <glertxundi@gmail.com>
ENV PATH ${PATH}:/opt/oraclejre/bin
ENV JAVA_HOME /opt/oraclejre
ADD ./buildroot/output/images/rootfs.tar /
EOL

# build & push
docker login -e="." -u="${QUAY_USERNAME}" -p="${QUAY_PASSWORD}" quay.io
docker build -t quay.io/glerchundi/buildroot-java:${TRAVIS_TAG} .
docker push quay.io/glerchundi/buildroot-java:${TRAVIS_TAG}
